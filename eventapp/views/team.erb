<div class="page-header">
  <h2>.</h2>
</div>

<div class="container theme-showcase" role="main">
  <h1>チーム情報の更新</h1>

  <div id="update-team-box">
    <form method="POST" action="/team">
      <div class="form-group">
        <label for="teamName">チーム名(変更不可)</label>
        <input type="text" class="form-control" id="inputTeamName" name="team" value="<%= team %>" size="30" readonly />
      </div>
      <div class="form-group">
        <label for="emailAddress">メールアドレス(ログイン用: 変更不可)</label>
        <input type="text" class="form-control" id="inputEmail" name="email" value="<%= email %>" size="30" readonly />
      </div>
      <div class="form-group">
        <label for="inputRound">参加日</label>
        <input type="text" class="form-control" id="inputRound" name="round" value="<%= case round when 1 then '月曜日' when 2 then '火曜日' when 3 then 'ゲスト' else '運営' end %>" size="30" readonly />
      </div>
      <% if is_game_team %>
      <div class="form-group">
        <label for="inputTargetIP">ベンチマーク対象IPアドレス</label>
        <input type="text" class="form-control" id="inputProje" name="target_instance" value="<%= target_instance %>" size="30" />
      </div>
      <button type="submit" class="btn btn-default">更新</button>
      <% end %>
    </form>
  </div>
</div>
