<h2>タイムライン</h2>
<div class="row panel panel-primary" id="timeline">
  <div class="col-md-4">
    <dl>
      <dt>name</dt><dd id="prof-name"><%= @user[:name] %></dd>
      <dt>email</dt><dd id="prof-email"><%= @user[:email] %></dd>
      <dt>following</dt><dd id="prof-following"><a href="/following"><%= following.size %></a></dd>
      <dt>followers</dt><dd id="prof-followers"><a href="/followers"><%= followers.size %></a></dd>
    </dl>
  </div>

  <% tweets.each do |tweets| %>
  <div class="tweet">
    <% tweet_user = get_user(tweets[:user_id]) %>
    <div class="user">
      <a href="/user/<%= tweet_user[:id] %>"><%= tweet_user[:name] %></a>
    </div>
    <div class="tweet">
      <% tweets[:content].split(/\n/).each do |line| %>
      <%= line %><br />
      <% end %>
    </div>
    <div class="tweet-created-at">投稿時刻:<%= tweets[:created_at] %></div>
  </div>
  <% end %>
</div>
